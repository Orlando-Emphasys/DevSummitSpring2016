<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<strong>Username: </strong>
		<br />
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit 'Create Comment', :class => 'btn btn-default'%>
	</p>
<% end %>